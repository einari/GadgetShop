<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery/smoothness/jquery-ui-1.8.16.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.6.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.16.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.link-button.js")" type="text/javascript"></script>
    @RenderSection("Header", false)
</head>
<body>
    <div id="outer">
        <div id="wrapper">
            <div id="nav">
                <div id="nav-left">
                    <div id="nav-right">
                        @Html.Partial("_Navigation")
                    </div>
                </div>
                <div class="clear">
                </div>
            </div>
            <div id="body">
                <div id="body-bot">
                    <h2>
                        <span>
                            <strong>@this.ViewContext.Controller.GetType().Name.Replace("Controller", string.Empty).ToUpper()</strong>
                        </span>
                    </h2>
                    <div id="items">
                        @RenderBody()
                        <div class="clear">
                        </div>
                    </div>
                    @Html.Partial("_BottomBanner")
                    @Html.Partial("_Footer")
                </div>
            </div>
        </div>
    </div>
</body>
</html>

