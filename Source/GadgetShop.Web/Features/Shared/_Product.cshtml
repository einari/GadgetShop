@using GadgetShop.Domain.Products

@model Product
           
<div class="item">
    <img src="@Url.Content("~/Content/Images/pic_1.jpg")" width="91" height="105" alt="iPod" class="left" />
    <h3>
        <a href="http://www.justwebtemplates.com">@Model.Name</a></h3>
    <p>
        Even more websites all about website templates on <a href="http://www.justwebtemplates.com">
            Just Web Templates</a>.</p>
    <div>
        @Html.ActionLink("details", "Details", "Products", new { productId = 0 }, new { @class = "details" })
        @using (Html.BeginForm("Add", "Carts", FormMethod.Post))
        {
            @Html.Hidden("Id",Model.ProductId)
            @Html.ActionLink("add to cart", "Add", "Carts", new { Id = 0 }, new { @class = "addtocart", onclick="$.post(this.href); return false;" })
        }
    </div>

    <div class="divider">
    </div>
</div>
